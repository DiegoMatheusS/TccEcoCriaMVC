@using EcocriaMVC.Models

@model Pontos

@{
    ViewData["Title"] = "Descarte";
}

<h2>Descarte no Ponto</h2>

<div>
    <h4>Informações do Ponto</h4>
    <p><strong>Nome:</strong> @Model.NomePonto</p>
    <p><strong>Endereço:</strong> @Model.EnderecoPonto</p>
    <p><strong>Cidade:</strong> @Model.CidadeEndereco</p>
    <p><strong>UF:</strong> @Model.UfEndereco</p>
</div>

<h4>Informe os itens para descarte:</h4>
<form asp-controller="Pontos" asp-action="RealizarDescarte" method="post">
    <input type="hidden" asp-for="IdPonto" />
    <div class="form-group">
        <label for="quantidade">Quantidade</label>
    using EcocriaMVC.Models;
    using EcocriaMVC.Models;
        <input type="number" class="form-control" id="quantidade" name="QuantidadeColeta" min="1" required />
    </div>
    <div class="form-group">
        <label for="ordem">Ordem de Grandeza</label>
        <select class="form-control" id="ordem" name="IdOrdemGrandeza" required>
            <option value="1">Pequeno Porte</option>
            <option value="2">Médio Porte</option>
            <option value="3">Grande Porte</option>
        </select>
    </div>
    <button type="submit" class="btn btn-success">Descartar</button>
</form>
